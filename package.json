{
  "name": "gruf.io",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev",
    "dev:e2e": "NEXT_PUBLIC_E2E_TEST=1 E2E_TEST=1 next dev --hostname 127.0.0.1 --port 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm -s run lint && npm -s run test --silent && npm -s run check:db-schema && npm -s run verify:rls",
    "check:ci": "npm -s run check && npm -s run build",
    "check:db-schema": "node scripts/check-db-schema.mjs",
    "verify:rls": "node scripts/verify-rls.mjs",
    "verify:remote-migrations": "node scripts/verify-remote-migrations.mjs",
    "verify:types-synced": "node scripts/verify-types-synced.mjs",
    "db:pull": "supabase db pull --linked",
    "db:push": "supabase db push --linked",
    "types:gen": "supabase gen types typescript --linked --schema public > lib/supabase/database.types.ts",
    "test:e2e:install": "playwright install",
    "test:e2e": "playwright test e2e/editor.boot.spec.ts"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "konva": "^10.2.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-dropzone": "^14.3.8",
    "react-konva": "^19.2.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "playwright": "^1.57.0",
    "supabase": "^2.72.8",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
