NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Server-only key for trusted API routes (never expose in browser env).
SUPABASE_SERVICE_ROLE_KEY=

# Optional: error reporting ingest endpoint (client-safe).
# If set, the app will POST JSON error events to this URL.
NEXT_PUBLIC_ERROR_INGEST_URL=

# User policy (MVP): upload safety rails (server-side).
# Configure these in your local env (e.g. a separate local env file), not in code.
#
# Max bytes for master image uploads (multipart).
USER_MAX_UPLOAD_BYTES=
#
# Allowed MIME types for uploads, comma-separated.
# Example: image/png,image/jpeg,image/webp
USER_ALLOWED_UPLOAD_MIME=
#
# Optional: max pixels (width_px * height_px) for uploads.
USER_UPLOAD_MAX_PIXELS=
